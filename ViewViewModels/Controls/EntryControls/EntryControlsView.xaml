<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModels.Controls.EntryControls.EntryControlsView"
             Title="{Binding Title}">

    <StackLayout VerticalOptions="Center">
        <Entry x:Name="EntryValue" Placeholder="Enter Text Here" 
               PlaceholderColor="#777777" TextColor="#ffb8c8" WidthRequest="300" HorizontalOptions="Center"/>

        <BoxView HeightRequest="2" BackgroundColor="#000000" WidthRequest="320"/>

        <Button Text="Next" HorizontalOptions="Center" Margin="10" 
                TextColor="#ffffff" BackgroundColor="#ffb8c8" Clicked=""/>
    </StackLayout>
    
</ContentPage>