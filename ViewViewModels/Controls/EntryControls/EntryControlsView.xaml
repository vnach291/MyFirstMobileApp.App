<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModels.Controls.EntryControls.EntryControlsView"
             Title="{Binding Title}">

    <StackLayout VerticalOptions="Center">
        <Label Text="Result from Entry Page" FontSize="Title" FontAttributes="Bold"
               TextColor="Blue" HorizontalOptions="Center" />

        <BoxView HeightRequest="3" BackgroundColor="#000000" WidthRequest="300" />

        <Label Text="{Binding EntryText}" FontSize="Title" TextColor="DarkRed"
               FontAttributes="Bold" HorizontalOptions="Center" />
        
    </StackLayout>
</ContentPage>