<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModels.Controls.PickerControls.PickerControlsView"
             Title="{Binding Title}">

    <StackLayout VerticalOptions="Center">
        <ImageButton Command="{Binding ListPickerClicked}"/>

        <BoxView HeightRequest="2" Color="#888888" WidthRequest="500" HorizontalOptions="Center"/>

        <ImageButton Command="{Binding DnTPickerClicked}"/>
    </StackLayout>
    
</ContentPage>