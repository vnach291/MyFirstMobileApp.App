<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModels.Controls.SliderControls.SliderControlsView"
             Title="Test">
    <StackLayout>

        <BoxView Color="Blue" Opacity="{Binding Value, Source={x:Reference slider}}" HeightRequest="25" HorizontalOptions="CenterAndExpand" />

        <Slider x:Name="slider" Value="0.5" ThumbColor="MediumPurple" MaximumTrackColor="BlueViolet" MinimumTrackColor="DarkOrange" />

        <Label x:Name="SliderValue" Text="{Binding Value, Source={x:Reference slider}, StringFormat='Value of the Slider is {0:F2}'}" FontAttributes="Bold" FontSize="Large"
               HorizontalOptions="Center" />

        <Label x:Name="Info" Text="Moving Slider will Change Opacity" FontAttributes="Bold" FontSize="Medium" TextColor="Blue" HorizontalOptions="Center" />


    </StackLayout>
</ContentPage>