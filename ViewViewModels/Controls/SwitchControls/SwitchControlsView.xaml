<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModels.Controls.SwitchControls.SwitchControlsView"
             Title="{Binding Title}">
    
    <FlexLayout Direction="Column" JustifyContent="Center" AlignItems="Center" 
                HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        
        <Label Text="Wow Hello!" x:Name="label1" FontSize="Large" 
               TextColor="Green" FontAttributes="Bold"/>

        <Switch x:Name="switch1" IsToggled="{Binding Button1Initial}" 
                Toggled="Switch1Toggled" ThumbColor="Goldenrod" OnColor="#f6cefc" />

        <Label Text="This is super cool" x:Name="label2" FontSize="Large" 
               TextColor="Orange" FontAttributes="Bold"/>

        <Switch x:Name="switch2" IsToggled="{Binding Button2Initial}" 
                Toggled="Switch2Toggled" ThumbColor="Goldenrod" OnColor="#03fcd3"/>
    </FlexLayout>
    
</ContentPage>